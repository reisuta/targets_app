<% provide(:title, t('technology.new')) %>
<h3 class="mt-3 text-center"><%= t('technology.new')%></h3>

<%= form_with(model: @technology, local: true) do |f| %>
  <%= render 'shared/error_messages', model: @technology %>
  <%= f.label :name, '使用技術名', class: 'form-label background-color' %>
  <%= f.text_field :name, class: 'form-control less-length mar-bottom' %>
  <div class="mt-3">
    <%= f.submit "クリア", type: :reset, class: 'btn btn-light' %>
    <%= f.submit "新規作成", class: 'btn btn-primary' %>
  </div>
<% end %>