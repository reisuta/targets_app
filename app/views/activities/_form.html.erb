<%= form_with(model: @activity, local: true) do |f| %>
  <%= render "shared/error_messages", model: @activity %>
  <%= f.label :title, '活動タイトル', class: 'form-label background-color' %>
  <%= f.text_field :title, class: 'form-control' %>
  <%= f.label :leader_name, 'PM名', class: 'form-label background-color' %>
  <%= f.text_field :leader_name, class: 'form-control' %>
  <%= f.label :amount, '金額', class: 'form-label background-color' %>
  <%= f.number_field :amount, min: 0, class: 'form-control' %>
  <%= f.label :is_secret, '公開/非公開', class: 'form-label background-color' %>
  <%= f.select :is_secret, ["公開", "非公開"], {selected: "公開"}, {class: 'form-control'} %>
  <%= f.label :suggestion_summary, '提案骨子', class: 'form-label background-color' %>
  <%= f.text_area :suggestion_summary, class: 'form-control' %>
  <%= f.label :suggestion_detail, '提案詳細', class: 'form-label background-color' %>
  <%= f.text_area :suggestion_detail, class: 'form-control' %>
  <%= f.label :comment, 'コメント', class: 'form-label background-color' %>
  <%= f.text_field :comment, class: 'form-control' %>
  <%= f.label :started_at, '開始日時', class: 'form-label background-color' %>
  <%= f.datetime_local_field :started_at, class: 'form-control' %>
  <%= f.label :ended_at, '終了日時', class: 'form-label background-color' %>
  <%= f.datetime_field :ended_at, class: 'form-control' %>
  <%= f.label :portrait, '画像', class: 'form-label background-color' %>
  <%= f.file_field :portrait, class: 'form-control' %>
  <%= @activity %>
  <div class="mt-3">
    <%= f.submit "クリア", type: :reset, class: 'btn btn-light' %>
    <%= f.submit "#{ @activity.new_record? ? '新規作成' : '更新' }", class: 'btn btn-primary' %>
  </div>
<% end %>
