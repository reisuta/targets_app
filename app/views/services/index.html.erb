<% provide(:title, t('title.service.index')) %>
<h3 class="mt-3 text-center"><%= t('title.service.index')%></h3>

<div class="d-flex justify-content-end">
  <%= link_to "新規作成", new_service_path, class: 'mb-3 btn btn-primary' %>
</div>

<%= search_form_for @q, class: 'row g-3', url: services_path do |f| %>
  <div>
    <%= f.label :name_cont, 'サービス名', class: 'form-label' %>
    <%= f.search_field :name_cont, class: 'form-control' %>
  </div>
  <div>
    <%= f.submit "クリア", type: :reset, class: 'btn btn-light' %>
    <%= f.submit '検索', class: 'btn btn-primary' %>
  </div>
<% end %>

<table class="mt-3 table table-bordered">
  <tr>
    <th><%= sort_link(@q, :name, 'サービス名', class: 'nav-link') %></th>
  </tr>
  
  <% @services.each do |service| %>
    <tr>
      <td><%= link_to service.name, service_path(service), class: 'nav-link' %></td>
    </tr>
  <% end %>
</table>
<%= paginate @services %>
